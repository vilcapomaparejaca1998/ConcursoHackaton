<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rosado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu" />

    <ImageButton
        android:id="@+id/flecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_navigation"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/flecha"></ImageButton>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="75dp"
        android:id="@+id/feminicidio"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/flecha"
        android:src="@drawable/feminicidio1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="Feminicidio"
        android:layout_below="@+id/feminicidio">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="75dp"
        android:id="@+id/hostigamiento"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/flecha"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hostigamiento1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="Hostigamiento laboral"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hostigamiento">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/machismo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/flecha"
        android:layout_marginStart="310dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/machismo1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="310dp"
        android:text="Machismo"
        android:layout_below="@+id/hostigamiento">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/tocamientos"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/feminicidio"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/tocamiento1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:textSize="12dp"
        android:text="Tocamientos indebidos"
        android:layout_below="@+id/tocamientos">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/acoso"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/feminicidio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/acoso"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:text="Acoso sexual callejero"
        android:layout_below="@+id/tocamientos">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cosificacion"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/machismo"
        android:layout_marginStart="310dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/cosificacion1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="310dp"
        android:textSize="12dp"
        android:text="Cosificacion"
        android:layout_below="@+id/tocamientos">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/violencia"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/tocamientos"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/violencia1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:textSize="12dp"
        android:text="Violencia psicologica"
        android:layout_below="@+id/violencia">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/violacion"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/acoso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/violacion1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:text="Violacion sexual"
        android:layout_below="@+id/violencia">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/paridad"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cosificacion"
        android:layout_marginStart="310dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/paridad1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="5dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="310dp"
        android:textSize="12dp"
        android:text="Paridad"
        android:layout_below="@+id/violencia">
    </TextView>
</RelativeLayout>