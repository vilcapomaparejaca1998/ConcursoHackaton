<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/rosado"
    android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu1" />
    <TextView
        android:layout_below="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar datos"
        android:gravity="center"
        android:textSize="40dp"
        android:id="@+id/visualizar"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="50dp">
    </TextView>
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">
        <TableLayout
            android:id="@+id/lista"
            android:layout_width="4000dp"
            android:layout_height="550dp"
            android:layout_below="@id/visualizar">
        </TableLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnAgrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Contactos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp">

    </Button>
    </RelativeLayout>