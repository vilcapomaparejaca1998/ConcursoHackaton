<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rosado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu" />
    <ImageButton
        android:id="@+id/flecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_navigation"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src = "@drawable/flecha">
    </ImageButton>
    <TextView
        android:id="@+id/textobuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flecha"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Buscar Ayuda">
    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cem"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textobuscar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:src="@drawable/cem1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="1dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cem"
        android:layout_marginStart="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Los CEM">

    </TextView>

    <ImageButton
        android:id="@+id/linea100"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textobuscar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/linea1000">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linea100"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="La linea 100">

    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/chat100"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textobuscar"
        android:layout_marginStart="310dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/chat100"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="1dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat100"
        android:layout_marginStart="310dp"
        android:layout_marginTop="10dp"
        android:text="Chat 100"
        android:textAlignment="center">

    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/fiscalia"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cem"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/fiscalia1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="1dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fiscalia"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Linea gratuita en fiscalia"
        android:textAlignment="center"
        android:textSize="12dp">

    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/comisaria"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/linea100"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/comisaria1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="1dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comisaria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Comisarias"
        android:textAlignment="center"
        android:textSize="12dp">

    </TextView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/flora"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/chat100"
        android:layout_marginStart="310dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/cem1"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="1dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flora"
        android:layout_marginStart="310dp"
        android:layout_marginTop="10dp"
        android:text="Flora Tristan"
        android:textAlignment="center"
        android:textSize="12dp">

    </TextView>
</RelativeLayout>